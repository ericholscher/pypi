<?xml version="1.0" encoding="utf-8"?>
<html xmlns="http://www.w3.org/1999/xhtml"
    xmlns:tal="http://xml.zope.org/namespaces/tal"
    xmlns:metal="http://xml.zope.org/namespaces/metal"
    metal:use-macro="standard_template/macros/page">

<metal:slot fill-slot="body">

<form method="GET" tal:attributes="action data/action">
<input type="hidden" name=":action" value="search" />
<table class="form">
<tr class="odd"><th>Name:</th>
    <td><input name="name" /></td>
</tr>
<tr class="even"><th>Version:</th>
    <td><input name="version" /></td>
</tr>
<tr class="odd"><th>Summary:</th>
    <td><input name="summary" /></td>
</tr>
<tr class="even"><th>Description:</th>
    <td><input name="description" /></td>
</tr>
<tr class="odd"><th>Keywords:</th>
    <td><input name="keywords" /></td>
</tr>

<tr class="even"><th>Hidden:</th>
    <td><select name="_pypi_hidden">
         <option value="0">No</option>
         <option value="1">Yes</option>
         <option value="">Don't Care</option>
        </select></td>
</tr>
<tr class="last"><td></td><td><input type="submit" value="Search" /></td></tr>
</table>
</form>

</metal:slot>
</html>
